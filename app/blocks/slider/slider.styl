.slider
   margin-right -1px
   display block

   &__bar
      width 760px
      height 60px
      background url('../images/slider_bar.png') no-repeat top left

   &__handle
      position relative
      top 10px
      left 370px

   &__grades
      margin-top -2px
      width 765px
      font bold 13px 'PTSans'
      color rgb(47, 27, 21)

   &__grade-no
      display inline-block
      width 142px
      vertical-align top

   &__grade-low
      display inline-block
      width 223px
	  vertical-align top

   &__grade-medium
      display inline-block
      width 170px
      vertical-align top

   &__grade-high
      padding-top 4px
      display inline-block
      width 218px
      text-align right
      vertical-align top

